   <div1 id="NOTEB" n="B">
    <head id="NOTEB.HEAD">&ch; and Bede&rsquo;s &paraphrase;</head>    
    <div2 id="NOTEB.TOC" type="toc">
     <div3 id="NOTEB.TOC.1" type="toc:book">
      <list type="simple">
       <item><xref n="u" doc="toc"><label rend="accesskey">U</label>p (Table of Contents)</xref></item>
       <item><xref n="p" doc="notea"><label rend="accesskey">P</label>revious (Note A)</xref></item>
